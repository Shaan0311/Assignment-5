<div class="row">
  <section class="main col-md-9">
    {{#if storeService.post}}
      <item>
        <div class="row">
          <div class="col-4">
            <h2>{{storeService.post.title}}</h2>
            <img
              src="{{storeService.post.featureImage}}"
              alt="Feature Image"
              style="width: 100%"
            />
          </div>

          <div class="col-8"><br />
            <br />
            <div class="row">
              <div class="col-12">
                {{storeService.post.body}}
                <br /><br />
                <strong>Price:</strong>
                $ {{storeService.post.price}}<br />
                <strong>Category:</strong>
                {{storeService.post.category}}<br />
                <strong>Last Updated:</strong>
                {{#formatDate storeService.post.postDate}}{{/formatDate}}
              </div>
            </div>
          </div>
        </div>
      </item>
    {{else}}
      <div class="col-md-12 text-center">
        <h2>{{storeService.message}}</h2>
        <p>Please try another Post / Category</p>
      </div>
    {{/if}}
  </section>

  <aside class="col-md-3">
    <br /><br />
    <h4>Items</h4>
    <ul class="list-group">
      {{#each storeService.items}}
        <a href="/shop/{{id}}?category={{../viewingCategory}}" class="list-group-item">{{title}}</a>
      {{/each}}
    </ul>

    <h4>Categories</h4>
    <ul class="list-group">
      {{#each storeService.categories}}
        <a href="/shop?category={{id}}" class="list-group-item">{{name}}</a>
      {{/each}}
    </ul>
  </aside>
</div>
