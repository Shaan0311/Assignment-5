<div class="row">
  <div class="col-md-12">
    <h2>Categories</h2>
    <hr />
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Category</th>
            <th></th> <!-- Empty header for the remove column -->
          </tr>
        </thead>
        <tbody>
          {{#each categories}}
          <tr>
            <td>{{name}}</td>
            <td>
              <!-- Remove button/link -->
              <a href="/categories/delete/{{id}}" class="btn btn-danger">Remove</a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
